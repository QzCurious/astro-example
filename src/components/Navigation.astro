---
const currentPath = Astro.url.pathname;
---

<nav class="nav-container">
  <ul>
    <li>
      <a href="/index.html" class={currentPath === "/" ? "active" : ""}>Home</a>
    </li>
    <li>
      <a
        href="/forms/index.html"
        class={currentPath === "/forms" ? "active" : ""}>Forms</a
      >
    </li>
    <li>
      <a
        href="/interactive/index.html"
        class={currentPath === "/interactive" ? "active" : ""}>Interactive</a
      >
    </li>
  </ul>
</nav>

<style is:inline>
  .nav-container {
    background: #2c3e50;
    padding: 1rem;
    margin-bottom: 2rem;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 2rem;
    justify-content: center;
  }

  a {
    color: white;
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    transition: background-color 0.3s;
  }

  a:hover,
  a.active {
    background-color: #34495e;
  }
</style>
